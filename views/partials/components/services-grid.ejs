<style>
    .service-card {
        position: relative;
    }
</style>
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-4  md:text-5xl mb-8">Services</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% sections.forEach(section => { %>
        <a href="<%= section.link %>">
            <div class="service-card h-64 bg-cover bg-center" style="background-image: url('<%= section.image %>');">
                    <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50">
                        <div class="text-white font-bold text-2xl p-5  bg-opacity-50 rounded">
                            <%= section.title %>
                        </div>
                    </div>
            </div>
        </a>
    <% }) %>
</div>
</div>